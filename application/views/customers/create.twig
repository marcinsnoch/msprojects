{% extends "layouts/application.twig" %}

{% set title = lang('Customers') %}
{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">{{ title }}</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ base_url('/dashboard') }}">{{ lang('Dashboard') }}</a></li>
                        <li class="breadcrumb-item"><a href="{{ base_url('/customers') }}">{{ lang('Customers') }}</a></li>
                        <li class="breadcrumb-item active">{{ lang('Create') }}</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="far fa-edit"></i>
                        {{ lang('Create_new') }}
                    </h3>
                </div>
                {{ form_open() }}
                <div class="card-body">
                    <div class="form-group">
                        <label for="nameInput">{{ lang('Name') }}</label>
                        <input type="text" name="name" class="form-control{{ form_error('name') ? ' is-invalid' }}" id="nameInput" value="{{ set_value('name') }}">
                        {{ form_error('name') }}
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="emilInput">{{ lang('Email') }}</label>
                                <input type="email" name="email" class="form-control{{ form_error('email') ? ' is-invalid' }}" id="emilInput" value="{{ set_value('email') }}">
                                {{ form_error('email') }}
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="websiteInput">{{ lang('Website') }}</label>
                                <input type="text" name="website" class="form-control{{ form_error('website') ? ' is-invalid' }}" id="websiteInput" value="{{ set_value('website') }}">
                                {{ form_error('website') }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="websiteInput">{{ lang('Website') }}</label>
                                <input type="text" name="website" class="form-control{{ form_error('website') ? ' is-invalid' }}" id="websiteInput" value="{{ set_value('website') }}">
                                {{ form_error('website') }}
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="websiteInput">{{ lang('Website') }}</label>
                                <input type="text" name="website" class="form-control{{ form_error('website') ? ' is-invalid' }}" id="websiteInput" value="{{ set_value('website') }}">
                                {{ form_error('website') }}
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="websiteInput">{{ lang('Website') }}</label>
                                <input type="text" name="website" class="form-control{{ form_error('website') ? ' is-invalid' }}" id="websiteInput" value="{{ set_value('website') }}">
                                {{ form_error('website') }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="{{ base_url('/projects') }}" class="btn btn-default">
                        <i class="fa fa-times"></i> {{ lang('Cancel') }}
                    </a>
                    <button type="submit" name="create_customer" value="true" class="btn btn-primary float-right">
                        <i class="fa fa-save"></i> {{ lang('Save') }}
                    </button>
                </div>
                {{ form_close() }}
            </div>
    </section>
{% endblock %}
{% block scripts %}
    {{ parent() }}
{% endblock %}
