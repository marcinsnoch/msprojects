{% extends 'layouts/base.twig' %}

{% set title = lang('Summary') %}
{% block title %}
{{ title }}
{% endblock %}

{% block content %}
<div class="container">
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="{{ site_url('img/logo.svg') }}" alt="" width="72" height="72">
        <h2>{{ summary.name }}</h2>
        <p class="lead">{{ summary.description|default('...') }}</p>
    </div>

    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">{{ lang('Summary') }}</span>
            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Ilość projekctów</h6>
                        <small class="text-muted">---</small>
                    </div>
                    <span class="text-muted">{{ summary.projects.count() }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Okres</h6>
                        <small class="text-muted">---</small>
                    </div>
                    <span class="text-muted">2020</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Łączna kwota (PLN)</span>
                    <strong>{{ summary.projects.sum('price')|format_currency('PLN') }}</strong>
                </li>
            </ul>

        </div>

        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">{{ lang('List_of_projects') }}</h4>
            <div class="card">

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Date</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    {% for project in summary.projects %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ project.created_at|format_datetime('short', 'none', locale='pl') }}</td>
                        <td>{{ project.name }}</td>
                        <td>{{ project.description }}</td>
                        <td>{{ project.price|format_currency('PLN') }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </div>

    <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1">© 2017-2020 Company Name</p>
        <ul class="list-inline">
            <li class="list-inline-item"><a href="#">Privacy</a></li>
            <li class="list-inline-item"><a href="#">Terms</a></li>
            <li class="list-inline-item"><a href="#">Support</a></li>
        </ul>
    </footer>
</div>
{% endblock %}
